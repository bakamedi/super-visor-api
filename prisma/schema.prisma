datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Account {
  id    Int    @id @default(autoincrement())
  name  String @unique
  phone String @unique

  vehicles Vehicle[]
  places   Place[]
}

model Vehicle {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  stateType  StateType
  latitude   Float
  longitude  Float
  alert      Int @default(0)

  // Relaci√≥n con Account
  accountId  Int
  account    Account   @relation(fields: [accountId], references: [id])
}

model Place {
  id        Int       @id @default(autoincrement())
  name      String
  latitude  Float
  longitude Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accountId Int
  account   Account  @relation(fields: [accountId], references: [id])
}

enum StateType {
  STOP
  ONLINE
  RUNNING
  OFFLINE
}
